<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden_table"
    tools:context=".MainActivity_menu">

    <Button
        android:id="@+id/single"
        android:layout_width="219dp"
        android:layout_height="90dp"
        android:layout_marginTop="128dp"
        android:background="@android:color/holo_blue_bright"
        android:fontFamily="casual"
        android:text="SINGLE PLAYER (FOR FUN)"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/multi"
        android:layout_width="232dp"
        android:layout_height="94dp"
        android:layout_marginTop="232dp"
        android:background="@android:color/holo_green_light"
        android:fontFamily="casual"
        android:text="TWO PLAYERS"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rules"
        android:layout_width="237dp"
        android:layout_height="62dp"
        android:layout_marginTop="472dp"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="casual"
        android:text="RULES"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="324dp"
        android:layout_height="85dp"
        android:layout_marginTop="28dp"
        android:width="@android:dimen/thumbnail_height"
        android:fontFamily="sans-serif-medium"
        android:hapticFeedbackEnabled="false"
        android:text="DICE GAME"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_dice"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multi"
        app:srcCompat="@drawable/white_1" />
</androidx.constraintlayout.widget.ConstraintLayout>